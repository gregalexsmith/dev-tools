  "description": "React component library",
  "license": "MIT",
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "files": [
    "build/**",
    "tailwind.config.js"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react --outDir build",
