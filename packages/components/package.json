    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "storybook-dark-mode": "^2.0.4",
    "tsup": "^6.5.0",
    "vite": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregalexsmith/dev-tools.git"
